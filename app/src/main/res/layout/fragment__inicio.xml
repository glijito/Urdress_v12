<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    android:background="@color/whiteapp"
    tools:context=".ApiDressWeb.vista.Fragments.FragmentInicio">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:weightSum="3"
        android:orientation="horizontal">

        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginLeft="55dp"
            android:src="@mipmap/urdress3x"
            android:layout_weight="1"/>
        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/group2277"
            android:layout_gravity="center_vertical"
            android:layout_weight="1"/>
    </LinearLayout>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_marginTop="32dp"
        android:orientation="vertical">

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@color/transparent_blue"
            android:textColor="@color/black_design"
            android:layout_marginBottom="1dp"
            android:textSize="25dp"
            android:text="Mi Perfil"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textSize="25dp"
            android:background="@color/transparent_grey"
            android:text="Publicados"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@color/black_design"
            android:textColor="@color/white_design"
            android:textSize="25dp"
            android:text="Los he rentado"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="9dp"
            android:layout_marginTop="1dp"
            android:paddingBottom="9dp"
            android:background="@color/transparent_blue"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="@color/black_design"
            android:text="Terminos y condiciones"/>
        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:layout_marginTop="1dp"
            android:textAlignment="center"
            android:background="@color/transparent_blue"
            android:textSize="15dp"
            android:textColor="@color/black_design"
            android:text="Acerca de"/>

    </LinearLayout>


</LinearLayout>
