<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ApiDressWeb.vista.Fragments.FragmentInicio">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/Inicio">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/menu"
            android:src="@mipmap/group2272"
            app:layout_constraintBottom_toBottomOf="@+id/imageView"
            app:layout_constraintEnd_toStartOf="@+id/imageView"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:id="@+id/imageView"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/urdress3x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageButton
            android:id="@+id/btn_publicar_vestido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:src="@mipmap/rectangle82"
            app:layout_constraintBottom_toTopOf="@+id/btn_rentar_vestido"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />
        <TextView
            android:id="@+id/txtVestidoPublicado"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Publicar un vestido"
            android:textColor="#FFFF"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_publicar_vestido"
            app:layout_constraintEnd_toEndOf="@+id/btn_publicar_vestido"
            app:layout_constraintStart_toStartOf="@+id/btn_publicar_vestido"
            app:layout_constraintTop_toTopOf="@+id/btn_publicar_vestido" />

        <ImageButton
            android:id="@+id/btn_rentar_vestido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginBottom="10dp"
            android:background="@android:color/transparent"
            android:foregroundGravity="center_horizontal"
            android:src="@mipmap/rectangle83"
            app:layout_constraintBottom_toBottomOf="parent"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent" />

        <TextView
            android:id="@+id/txtRentaVestido"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rentar un vestido"
            android:textColor="#FFFF"
            android:textSize="17dp"
            app:layout_constraintBottom_toBottomOf="@+id/btn_rentar_vestido"
            app:layout_constraintEnd_toEndOf="@+id/btn_rentar_vestido"
            app:layout_constraintStart_toStartOf="@+id/btn_rentar_vestido"
            app:layout_constraintTop_toTopOf="@+id/btn_rentar_vestido" />
    </android.support.constraint.ConstraintLayout>

</FrameLayout>