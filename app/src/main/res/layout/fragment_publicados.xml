<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:background="@color/colorPrimary"
    tools:context=".ApiDressWeb.vista.Fragments.FragmentPublicados">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">
        <Button
            android:id="@+id/misPubli"
            android:layout_width="match_parent"
            android:layout_height="80dp"
            android:background="#7C95AF"
            android:text="Mis publicaciones"
            android:textColor="#FFFFFF"
            android:textSize="17dp" />

        <Button
            android:id="@+id/atras"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="20dp"
            android:background="#7C95AF"
            android:text="AtrÃ¡s"
            android:textColor="#FFFFFF"
            android:textSize="14dp"
            app:layout_constraintTop_toTopOf="@+id/misPubli" />


    </android.support.constraint.ConstraintLayout>

    <LinearLayout
        android:layout_width="fill_parent"
        android:layout_height="42dp"
        android:orientation="horizontal"
        android:background="@color/colorPrimaryDark"
        android:layout_marginTop="80dp">
        <TableLayout
            android:layout_width="fill_parent"
            android:layout_height="fill_parent"
            android:stretchColumns="0,1">
            <TableRow>
                <Button
                    android:id="@+id/btnReservados"
                    android:layout_height="wrap_content"
                    android:background="#83919E"
                    android:textColor="#EBF4F8"
                    android:textSize="14dp"
                    android:text="Reservados y rentando"/>
                <Button
                    android:id="@+id/btnPendientes"
                    android:layout_height="wrap_content"
                    android:textSize="14dp"
                    android:textColor="#EBF4F8"
                    android:text="Pendientes de entrega"
                    android:background="#697989"/>
            </TableRow>
        </TableLayout>
    </LinearLayout>

</FrameLayout>