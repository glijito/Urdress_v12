<?xml version="1.0" encoding="utf-8"?>
<FrameLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@color/colorPrimary"
    tools:context=".ApiDressWeb.vista.Fragments.FragmentMenu">

    <android.support.constraint.ConstraintLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:id="@+id/FragmentMenu">

        <ImageView
            android:id="@+id/imageView2"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/urdress3x"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toStartOf="parent"
            app:layout_constraintTop_toTopOf="parent" />

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:src="@mipmap/group2277"
            app:layout_constraintBottom_toBottomOf="@+id/imageView2"
            app:layout_constraintEnd_toEndOf="parent"
            app:layout_constraintStart_toEndOf="@+id/imageView2"
            app:layout_constraintTop_toTopOf="parent" />

        <TextView
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:id="@+id/Perfil"
            android:textAlignment="center"
            android:layout_marginTop="40dp"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@color/transparent_blue"
            android:textColor="@color/black_design"
            android:layout_marginBottom="1dp"
            android:textSize="25dp"
            android:text="Mi Perfil"
            app:layout_constraintTop_toBottomOf="@+id/imageView2"/>
        <TextView
            android:id="@+id/Publicados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:textSize="25dp"
            android:background="@color/transparent_grey"
            android:text="Publicados"
            app:layout_constraintTop_toBottomOf="@+id/Perfil"/>
        <TextView
            android:id="@+id/rentados"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textAlignment="center"
            android:paddingTop="20dp"
            android:paddingBottom="20dp"
            android:background="@color/black_design"
            android:textColor="@color/white_design"
            android:textSize="25dp"
            android:text="Los he rentado"
            app:layout_constraintTop_toBottomOf="@+id/Publicados"/>
        <TextView
            android:id="@+id/terminos"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:background="@color/transparent_blue"
            android:textAlignment="center"
            android:textSize="15dp"
            android:textColor="@color/black_design"
            android:text="Terminos y condiciones"
            app:layout_constraintTop_toBottomOf="@+id/rentados"/>
        <TextView
            android:id="@+id/acerca"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:paddingTop="9dp"
            android:paddingBottom="9dp"
            android:textAlignment="center"
            android:background="@color/transparent_blue"
            android:textSize="15dp"
            android:textColor="@color/black_design"
            android:text="Acerca de"
            app:layout_constraintTop_toBottomOf="@+id/terminos"/>

    </android.support.constraint.ConstraintLayout>

</FrameLayout>